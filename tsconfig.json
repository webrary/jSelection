{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
//        "noImplicitUseStrict": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules"
    ]
}